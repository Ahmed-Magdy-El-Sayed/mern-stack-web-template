extends ../main
block variables
    -let pageTitle = 'Login'
block content
    .container
        h1(class='text-center text-primary mt-5') Login
        form(class='login w-50 text-center m-auto needs-validation mt-5', action="/account/login", method='post')
            input(class='form-control', type='name', name='nameOrEmail', placeholder='enter your name or email', required)
            input(class='form-control mt-3 mb-2' type='password', name='password', placeholder='enter password', required)
            a.text-center.text-decoration-none(href='/account/password-forgot') forgot your password?
            br
            button(class="btn btn-primary mt-2 mb-3", type='submit') submit
        .text-center
            span.text-center do not have account?
            | 
            a.text-decoration(href='/account/signup') signup
            if(error)
                p(class="alert alert-danger mt-3")= error
            if(ban)
                .alert.alert-warning.text-center.ban(data-ending-time=ban.ending)= "The admin banned your account because: " + ban.reason
                    p.m-0="the ban end at "+ new Date(parseInt(ban.ending)).toLocaleString("en")
block js
    script(src="/js/login.js") 
