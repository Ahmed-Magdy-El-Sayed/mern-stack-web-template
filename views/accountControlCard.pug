.card.text-center(style="width: 18rem; cursor:pointer", id="card-"+account._id)
    .card-body
        img.img-icon.rounded-circle.mb-3(style="width: 60px; height: 60px;", src=account.img? account.img:"/user.jpg", alt="account img")
        h5= String(user._id) == String(account._id)? "Me" : account.name 
        form.form-floating.mb-3(action="/account/authzs/change", method="post")
            input(type="hidden", name="userID", value=account._id)
            input.form-control.mb-2(type="hidden", name="email", value=account.email)
            select.form-select(name="authz", id="select"+account._id, onchange="changeAuthz(this.form)")
                - let accountRole = account.isAdmin? "admin" : account.isEditor? "editor" : account.isAuthor? "author" : null
                option(value="normal", selected =accountRole? false : true) None
                option(value="author", selected =accountRole=="author") Author
                option(value="editor", selected =accountRole=="editor") Editor
                option(value="admin", selected =accountRole=="admin") Admin
            label(for="select"+account._id) Change Authorizations
        p.warnings-num= "Warnings number: "+account.warningsNum
        p.bans-num= "Bans number: "+account.bansNum
        if(String(user._id) != String(account._id))
            .penalty
                -if(new Date().getTime() < account.ban?.ending)
                    .ban-info
                        p="this account is Banned until " + new Date(parseInt(account.ban.ending)).toLocaleString("en")
                        form(class="mt-3", id="unban"+account._id, action="/account/ban/delete", method="post" onsubmit="unban(event)")
                            input.form-control.mb-2(type="hidden", name="email", value=account.email)
                            button.btn.btn-primary(type="submit", name="userID", value=account._id) unban
                -else
                    .d-flex.justify-content-around
                        button.btn.btn-primary(type="button" data-bs-toggle="collapse" data-bs-target="#warning"+account._id) Warning 
                        button.btn.btn-primary(type="button" data-bs-toggle="collapse" data-bs-target="#ban"+account._id) Ban 
                        button.btn.btn-primary(type="button" data-bs-toggle="collapse" data-bs-target="#delete"+account._id) Delete 
                    
                    form(class="collapse mt-3" id="warning"+account._id, action="/account/warning", method="post", onsubmit="sendWarning(event)")
                        input.form-control.mb-2(type="text", name="reason", placeholder="Enter the warning reason" required)
                        input.form-control.mb-2(type="hidden", name="email", value=account.email)
                        button.btn.btn-danger(type="submit", name="userID", value=account._id) Submit
                        
                    form(class="collapse mt-3" id="ban"+account._id, action="/account/ban", method="post", onsubmit="sendBan(event)")
                        input.form-control.mb-2(type="text", name="reason", placeholder="Enter the ban reason" required)
                        input.form-control.mb-2(type="number", min="1", name="ending", placeholder="Enter the ban duration (dayes)" required)
                        p no fractions
                        input.form-control.mb-2(type="hidden", name="email", value=account.email)
                        button.btn.btn-danger(type="submit", name="userID", value=account._id) Ban

                    form(class="collapse mt-3" id="delete"+account._id, action="/account/delete", method="post", onsubmit="deleteAccount(event)")
                        p= "Are you sure, you want to delete this account"
                        input.form-control.mb-2(type="hidden", name="email", value=account.email)
                        button.btn.btn-danger(type="submit", name="userID", value=account._id) Delete
